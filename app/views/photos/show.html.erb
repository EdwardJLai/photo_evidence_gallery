<%- model_class = Photo -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<div class="span-3">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:caption) %>:</strong></dt>
  <dd><%= @photo.caption %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:tags) %>:</strong></dt>
  <dd><%= @photo.tags %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:incidentName) %>:</strong></dt>
  <dd><%= @photo.incidentName %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:operationalPeriod) %>:</strong></dt>
  <dd><%= @photo.operationalPeriod %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:teamNumber) %>:</strong></dt>
  <dd><%= @photo.teamNumber %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:contentType) %>:</strong></dt>
  <dd><%= @photo.contentType %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:filename) %>:</strong></dt>
  <dd><%= @photo.filename %>&nbsp;</dd>

  <dt><strong><%= model_class.human_attribute_name(:edited) %>:</strong></dt>
  <dd><%= @photo.edited %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:lat) %>:</strong></dt>
  <dd><%= link_to_if(@photo.lat && @photo.lng, @photo.lat, "http://maps.google.com/maps?q=#{@photo.lat},#{@photo.lng}") %>&nbsp;</dd>
  <dt><strong><%= model_class.human_attribute_name(:lng) %>:</strong></dt>
  <dd><%= link_to_if(@photo.lat && @photo.lng, @photo.lng, "http://maps.google.com/maps?q=#{@photo.lat},#{@photo.lng}") %>&nbsp;</dd>

  <dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%= image_tag @photo.image_url(:cropped_large) if @photo.image? %></dd>
  </dl>
</dl></div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              photos_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_photo_path(@photo), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              photo_path(@photo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
