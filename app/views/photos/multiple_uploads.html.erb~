<%= form_for(@photos, :html => {:multipart => true}, :url=>{:action=>'make_multiple'}) do |f| %>
  <% if @photos.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photos.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photos.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.file_field :images, :multiple => 'true' %>
   
  <div class="actions">
  	<%= f.submit %>
  </div>
	
	<%= link_to 'Back', photos_path %>
<% end %>
